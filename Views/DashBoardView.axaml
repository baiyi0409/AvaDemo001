                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ListCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    MinWidth="240"
                                    Margin="10"
                                    Background="#232327"
                                    CornerRadius="10">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <DockPanel Grid.Row="0" LastChildFill="False">
                                            <TextBlock
                                                DockPanel.Dock="Left"
                                                Foreground="#d0d0d0"
                                                Text="{Binding Title}" />
                                            <Image DockPanel.Dock="Right" />
                                        </DockPanel>
                                        <DockPanel
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            LastChildFill="False">
                                            <TextBlock
                                                DockPanel.Dock="Left"
                                                FontSize="18"
                                                Foreground="#dededf"
                                                Text="{Binding Total}" />
                                            <TextBlock
                                                DockPanel.Dock="Right"
                                                Foreground="#878789"
                                                Text="{Binding Type}" />
                                        </DockPanel>
                                        <TextBlock
                                            Grid.Row="2"
                                            Margin="0,10,0,0"
                                            Foreground="#5d5d5f"
                                            Text="{Binding Description}" />
                                        <DockPanel
                                            Grid.Row="3"
                                            Margin="0,10,0,0"
                                            LastChildFill="False">
                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                <Image
                                                    Width="20"
                                                    Height="20"
                                                    DockPanel.Dock="Right"
                                                    Source="{Binding UserAvatar}">
                                                    <Image.Clip>
                                                        <EllipseGeometry
                                                            Center="10 10"
                                                            RadiusX="10"
                                                            RadiusY="10" />
                                                    </Image.Clip>
                                                </Image>
                                                <TextBlock
                                                    Margin="10,0,0,0"
                                                    DockPanel.Dock="Left"
                                                    Foreground="#878789"
                                                    Text="{Binding UserName}" />
                                            </StackPanel>
                                            <TextBlock
